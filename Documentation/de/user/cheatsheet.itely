@item @code{1 2 8 16}
@tab Tondauern
@tab
@lilypond[fragment,relative=2,notime]
\set Staff.autoBeaming = ##f
\override Staff.Clef #'break-visibility = #all-invisible
c1 c2 c8 c16
@end lilypond

