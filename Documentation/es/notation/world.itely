  @tab final
  @tab otros maqams del grupo (final)
@item ajam
  @tab @code{major}
  @tab sib
  @tab jaharka (fa)
@item bayati
  @tab @code{bayati}
  @tab re
  @tab hussaini, muhayer, saba, ushaq, nawa (sol)
@item hijaz
  @tab @code{hijaz}
  @tab re
  @tab zanjaran (do)
@item hijaz kar
  @tab @code{hijaz_kar}
  @tab do
  @tab shahnaz, shad arban (sol)
@item huzam
