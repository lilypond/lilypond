@node Arpegio
@unnumberedsubsubsec Arpegio
@translationof Arpeggio

@cindex arpegio
@cindex acorde quebrado
@cindex acorde arpegiado
@cindex quebrado, acorde
@funindex \arpeggio
@funindex \arpeggioArrowUp
