my @default_toc = [];

# Initialize the toc_depth to 1 if the command-line option -D=short_toc is given
sub lilypond_init_toc_depth ()
{
  if (exists($main::value{'short_toc'}) and not exists($main::value{'bigpage'})
      and not $web_manual) {
