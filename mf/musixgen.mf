  fy:=reduction*nhh;
  fthick:=reduction*thick;

  x2=.8fx; y2=3nhh;
  x1=x2r+.26fx; y1=y2;
  x3=x2+.71fx; y3r=y2+1fy;
  x4=x3+.71fx; y4=y2-.2fy;
  x6=x2-6reduction*thinwidth; y6=y2-2.2fy;
